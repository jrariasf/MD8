<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="MD8.Views.ViewA">

    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <Label Text="{Binding Title}" />
        <!-- <Entry Text="{Binding Value}" /> -->
        <Button Text="Navigate to View B" Command="{Binding NavigateCommand}" CommandParameter="ViewB" />
        <Button Text="Navigate to View C" Command="{Binding NavigateCommand}" CommandParameter="ViewC" />
        <Entry Text="{Binding mitexto}" class="mitexto" BackgroundColor="red"></Entry>
        <Button Text="pulsame" Command="{Binding NavigateCommand}" CommandParameter="{Binding mitexto}" />
    </StackLayout>
</ContentPage>